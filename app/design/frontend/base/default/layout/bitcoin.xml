<?xml version="1.0"?>
<layout version="0.1.0">
    <checkout_onepage_review>
        <reference name="checkout.onepage.review.info.items.after">
            <block name="yellow_widget" type="bitcoin/widget"/>
        </reference>
    </checkout_onepage_review>
    <bitcoin_index_pay>
        <reference name="root">
            <remove name="left" />
            <remove name="right" />
            <action method="setTemplate">
                <template>page/empty.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="setTitle" translate="title"><title>Pay With Yellow!</title></action>
            <action method="addItem"><type>skin_css</type><name>css/bitcoin.css</name></action>
        </reference>
        <reference name="content">
            <block type="bitcoin/fullscreen_widget_header"  name="widget_header"  template="bitcoin/fullscreen/widget/header.phtml"/>
            <block type="bitcoin/fullscreen_widget_content" name="widget_content" template="bitcoin/fullscreen/widget/content.phtml"/>
            <block type="bitcoin/fullscreen_widget_footer"  name="widget_footer"  template="bitcoin/fullscreen/widget/footer.phtml"/>
        </reference>
    </bitcoin_index_pay>
</layout>   
	